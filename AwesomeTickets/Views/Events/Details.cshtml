            @Html.DisplayNameFor(model => model.EventDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
